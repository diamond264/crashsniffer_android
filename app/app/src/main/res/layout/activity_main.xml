<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Distance between transceivers (w, in meters)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTextW"
        android:inputType="numberDecimal"
        android:text="0.6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Warning distance (ρ, in meters)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextR"
        android:inputType="numberDecimal"
        android:text="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Prediction time (s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextT"
        android:inputType="numberDecimal"
        android:text="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonStart"
        android:text="Start Crash Detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>

<!--    <TextView-->
<!--        android:id="@+id/resultText"-->
<!--        android:textSize="24sp"-->
<!--        android:textColor="#000000"-->
<!--        android:layout_marginTop="24dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text=""-->
<!--        android:gravity="center"/>-->

    <TextView
        android:id="@+id/resultText"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#888888"
        android:text="Status will appear here" />

    <TextView
        android:id="@+id/bluetoothStatus"
        android:text="Bluetooth Status"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonScan"
        android:text="Scan Bluetooth Devices"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/deviceList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp" />

</LinearLayout>